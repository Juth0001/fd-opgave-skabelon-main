---
import Layout from "@layouts/Layout.astro";
import "@styles/main.css";
import "@styles/global.css";
import Hero from "@components/Hero.astro";
---

<Layout>
    <Hero />
    <main>
        <section class="our_vision">
            <div class="wrapper">
                <div class="card">
                    <div class="content">
                        <p>OUR VISION</p>
                        <h3>Turn your ideas into reality.</h3>
                        <p>
                            Capitalize on low hanging fruit to identify a
                            ballpark value added activity beta test. Override
                            the digital divide with additional from DevOps.
                        </p>
                        <li>
                            <p>
                                Bring to the table win-win survival strategies
                                to ensure proactive domination. At the end of
                                the day.
                            </p>
                            <p>
                                Capitalize on low hanging fruit to identify a
                                ballpark value added activity to beta test
                                override the digital.
                            </p>
                        </li>
                    </div>
                    <figure class="figure_img">
                        <img
                            src="src/data/images/teamwork2.webp"
                            alt="teamwork"
                        />
                    </figure>
                </div>
            </div>
        </section>
    </main>
</Layout>
<style>
    @layer component {
        body > * {
            grid-column: 2;
        }
        .our_vision {
            margin-bottom: 5rem;
            container-type: inline-size;
        }
        .our_vision .wrapper {
            margin: 8rem 0 4rem 0;
        }
        .our_vision .card {
            display: grid;
            gap: 1rem;
            position: relative;
            align-items: start;
        }
        @container (width > 768px) {
            .our_vision .card {
                grid-template-columns: 2fr 2fr;
            }
        }
        @container (width < 700px) {
            .our_vision .card {
                grid-template-columns: 1fr;
            }
            .our_vision .figure_img {
                display: none;
            }
            .our_vision .wrapper {
                margin: 2rem 0 2rem 0;
            }

            .our_vision .content {
                padding: 2rem 1rem;

                gap: 1rem;
                z-index: 10;
                position: relative;
            }
            .our_vision .content::before {
                content: "";
                position: absolute;
                top: 2rem;
                right: 2rem;
                width: 220px;
                height: 100px;
                background-image: url("../icons/pattern.svg");
                background-repeat: repeat;
                z-index: 0;
                opacity: 0.6;
            }
        }
        .our_vision .figure_img {
            position: relative;
            width: 90%;
            max-width: 100%;
            align-self: end;
            justify-self: end;
        }
        .our_vision .figure_img img {
            max-width: 100%;
            height: auto;
            border-radius: 20px;
            display: block;
            position: relative;
            z-index: 2;
        }
        .our_vision .figure_img::after {
            content: "";
            position: absolute;
            top: -1.4rem;
            right: -2rem;
            width: 120px;
            height: 120px;
            background: var(--primary-green);
            border-radius: 10px;
            z-index: 1;
        }

        .our_vision .figure_img::before {
            content: "";
            position: absolute;
            top: -2.8rem;
            right: -5rem;
            width: 220px;
            height: 219px;
            background-image: url("../icons/pattern.svg");
            background-repeat: repeat;
            z-index: 0;
            opacity: 0.6;
        }
        .our_vision .content {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            max-width: fit-content;
        }

        .our_vision li {
            list-style: none;
        }

        .our_vision li p {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .our_vision li:has(p) p::before {
            content: url("../icons/checkmark.svg");
        }
    }
</style>
