---
import "@styles/main.css";
import "@styles/global.css";
---

<header>
    <div class="logo">
        <h5>AskExperts</h5>
    </div>
    <div class="nav-phone">
        <details name="Navigation">
            <summary>Menu </summary>
            <p><a href="/">Home</a></p>
            <p><a href="/casestudy">Case Study</a></p>
            <p><a href="/team">Team</a></p>
            <p><a href="/aboutus">About</a></p>
        </details>
    </div>
    <nav class="nav-desktop">
        <a href="/">Home</a>
        <a href="/casestudy">Case Study</a>
        <a href="/team">Team</a>
        <a href="/aboutus">About</a>
    </nav>
    <div class="login">
        <button>Login</button>
    </div>
</header>
<style>
    @media (width< 700px) {
        header {
            grid-column: 1/-1;

            display: grid;
            grid-template-columns: 2fr auto 1fr;
            place-items: center;
            justify-content: space-between;
        }
        .logo {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 0.65;
        }
        .nav-desktop {
            display: none;
        }
        .nav-phone {
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            font-size: 17.728px;

            padding: 20px;
            ::marker {
                content: "";
                color: var(--secondary-white);
            }
            summary {
                color: var(--secondary-white);
                &::before {
                    content: "â˜°";
                }

                details {
                    interpolate-size: allow-keywords;
                }
                [open]::details-content {
                    block-size: calc-size(auto, size);
                }

                p {
                    text-wrap: pretty;
                }
                @view-transition {
                    navigation: auto;
                }
            }
        }
        a {
            margin: 1rem;
        }
    }
    @layer components {
        header {
            background: var(--secondary-black);
            backdrop-filter: blur(10.5px);
            grid-column: 1/-1;
            height: fit-content;
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            place-items: center;
            justify-content: space-between;
        }
        .logo {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 0.65;
        }
        .nav-phone {
            display: none;
        }
        .nav-desktop {
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            font-size: 17.728px;

            a:not(:last-child) {
                margin-right: 15px;
            }
        }

        h5 {
            color: var(--secondary-white);
            margin: 0;
        }

        a {
            color: var(--secondary-white);
            font-size: 12px;
            margin: 1rem;
        }

        button {
            display: flex;
            padding: 4px 16px;
            flex: 0.65;
            gap: 10px;
            margin: 0;
            border-radius: 20px;
            background: var(--primary-yellow);
        }
    }
</style>
